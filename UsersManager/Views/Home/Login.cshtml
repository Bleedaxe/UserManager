@{
    Layout = "../Shared/SiteLayout.cshtml";
}

<fieldset>
    <legend>Login</legend>

    <form action="/Home/Login" method="post">
        <span style="color:red;">@ViewData["authenticationError"]</span>
        <table>
            <tr>
                <td>Username: </td>
                <td>
                    <input type="text" name="username" value="@ViewData["username"]" />
                </td>
                <td>
                    <span style="color:red;">@ViewData["usernameError"]</span>
                </td>
            </tr>
            <tr>
                <td>Password: </td>
                <td>
                    <input type="password" name="password" value="@ViewData["password"]" />
                </td>
                <td>
                    <span style="color:red;">@ViewData["passwordError"]</span>
                </td>
            </tr>
            <tr>
                <td></td>
                <td>
                    <input style="float:right;" type="submit" value="Login" />
                </td>
                <td></td>
            </tr>
        </table>
    </form>
</fieldset>